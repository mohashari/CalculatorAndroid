<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="aik.sinau.com.myideal.MainActivity">

    <TextView
        android:id="@+id/txtWelcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="WELCOME TO MY IDEAL"
        android:textColor="#11de5a"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtTinggi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtWelcome"
        android:layout_marginTop="10dp"
        android:text="Masukan Tinggi Badan (cm)"
        android:textSize="17dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTinggi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtTinggi"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/txtBerat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTinggi"
        android:layout_marginTop="10dp"
        android:text="Masukan Berat    Badan (Kg)"
        android:textSize="17dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editBerat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtBerat"
        android:layout_marginTop="15dp" />

    <Button
        android:id="@+id/btnProces"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editBerat"
        android:layout_marginTop="15dp"
        android:text="PROSES IDEAL" />

    <TextView
        android:id="@+id/txtHasil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnProces"
        android:text="Hasil"
        android:textAlignment="center" />

</RelativeLayout>
